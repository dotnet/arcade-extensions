{
    "manifestVersion": 1,
    "id": "dnceng-build-release-tasks",
    "name": "Dnceng Tools",
    "version": "0.0.25",
    "publisher": "dotnet-dnceng",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "description": "Tasks for building in dnceng.",
    "categories": [
        "Azure Pipelines"
    ],
    "icons": {
        "default": "images/dotnet-bot-128.jpg"
    },
    "scopes": [
        "vso.test"
    ],
    "files": [
        {
            "path": ".artifacts/tasks/BashOrCmdV1",
            "packagePath": "BashOrCmd/BashOrCmdV1"
        },
        {
            "path": ".artifacts/tasks/SendStartTelemetryV1",
            "packagePath": "SendStartTelemetry/SendStartTelemetryV1"
        },
        {
            "path": ".artifacts/tasks/SendEndTelemetryV1",
            "packagePath": "SendEndTelemetry/SendEndTelemetryV1"
        },
        {
            "path": "src/helix/index.html",
            "packagePath": "helix/index.html",
            "addressable": true
        },
        {
            "path": "src/helix/node_modules/vss-web-extension-sdk/lib",
            "packagePath": "helix/node_modules/vss-web-extension-sdk/lib",
            "addressable": true
        }  
    ],
    "contributions": [
        {
            "id": "custom-build-script-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "BashOrCmd/BashOrCmdV1"
            }
        },
        {
            "id": "custom-build-send-start-telemetry-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "SendStartTelemetry/SendStartTelemetryV1"
            }
        },
        {
            "id": "custom-build-send-end-telemetry-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "SendEndTelemetry/SendEndTelemetryV1"
            }
        },
        {
            "id": "helix-test-information-tab",
            "type": "ms.vss-web.tab",
            "description": "Adds a tab to the test results view",
            "targets": [
                "ms.vss-test-web.test-result-details-tab-items"
            ],
            "properties": {
                "uri": "helix/index.html",
                "title": "Artifacts",
                "name": "Artifacts"
            }, 
            "restrictedTo": [
                "member"
            ]
        }
    ]
}
